{% if object.getStatus == constant('\\Hris\\RecruitmentBundle\\Entity\\Application::STATUS_HIRED')%}
{% set readonly = true %}
{% endif %}
<form id="add_educ_form" method="post" class="form-horizontal">
    <div class="portlet-body">
        {{form.hidden('app_form','educ_background')}}
        {{ form.hidden('csrf_token',app.session.get('csrf_token')) }}
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th rowspan="2">Level</th>
                        <th rowspan="2">Name of School/Course</th>
                        <th colspan="2">Year Attended</th>
                        <th rowspan="2">Honors/Awards and Scholarship Received</th>
                    </tr>
                    <tr>
                        <th>From</th>
                        <th>To</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="hidden" name="id[]" value="elementary">Elementary
                        </td>
                        <td class="tables">
                            <textarea id="elementary_name_course" name="elementary_name_course" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }} >{{object.getEducation.getElementary.school_name_course|default('')}}
                            </textarea>       
                        </td>
                        <td class="tables">
                            <input type="text" id="elementary_year_from" name="elementary_year_from" class="form-control" placeholder="From" value="{{object.getEducation.getElementary.year_from|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                        </td>
                        <td class="tables">
                            <input type="text" id="elementary_year_to" name="elementary_year_to" class="form-control" placeholder="To" value="{{object.getEducation.getElementary.year_to|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                        </td>
                        <td class="tables">
                            <textarea id="elementary_awards_received" name="elementary_awards_received" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getElementary.awards_received|default('')}}    
                            </textarea>
                        </td>
                    </tr>

                     <tr>
                            <td>
                                <input type="hidden" name="id[]" value="highschool">High School
                            </td>
                            <td class="tables">
                                <textarea id="highschool_name_course" name="highschool_name_course" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getHighschool.school_name_course|default('')}}
                                </textarea>
                            </td>
                            <td class="tables">
                                <input type="text" id="highschool_year_from" name="highschool_year_from" class="form-control" placeholder="From" value="{{object.getEducation.getHighschool.year_from|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <input type="text" id="highschool_year_to" name="highschool_year_to" class="form-control" placeholder="To" value="{{object.getEducation.getHighschool.year_to|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <textarea id="highschool_awards_received" name="highschool_awards_received" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getHighschool.awards_received|default('')}}</textarea>
                            </td>
                    </tr>

                    <tr>
                            <td>
                                <input type="hidden" name="id[]" value="vocational">Vocational (if any)
                            </td>
                            <td class="tables">
                                <textarea id="vocational_name_course" name="vocational_name_course" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getVocational.school_name_course|default('')}}</textarea>
                            </td>
                            <td class="tables">
                                <input type="text" id="vocational_year_from" name="vocational_year_from" class="form-control" placeholder="From" value="{{object.getEducation.getVocational.year_from|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <input type="text" id="vocational_year_to" name="vocational_year_to" class="form-control" placeholder="To" value="{{object.getEducation.getVocational.year_to|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <textarea id="vocational_awards_received" name="vocational_awards_received" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getVocational.awards_received|default('')}}</textarea>
                            </td>
                    </tr>

                    <tr>
                            <td>
                                <input type="hidden" name="id[]" value="college">College
                            </td>
                            <td class="tables">
                                <textarea id="college_name_course" name="college_name_course" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getCollege.school_name_course|default('')}}</textarea>
                            </td>
                            <td class="tables">
                                <input type="text" id="college_year_from" name="college_year_from" class="form-control" placeholder="From" value="{{object.getEducation.getCollege.year_from|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <input type="text" id="college_year_to" name="college_year_to" class="form-control" placeholder="To" value="{{object.getEducation.getCollege.year_to|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <textarea id="college_awards_received" name="college_awards_received" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getCollege.awards_received|default('')}}</textarea>
                            </td>
                    </tr>
                        
                    <tr>
                            <td>
                                <input type="hidden" name="id[]" value="postgraduate">Post Graduate (if any)
                            </td>
                            <td class="tables">
                                <textarea id="postgraduate_name_course" name="postgraduate_name_course" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getPostgraduate.school_name_course|default('')}}</textarea>
                            </td>
                            <td class="tables">
                                <input type="text" id="postgraduate_year_from" name="postgraduate_year_from" class="form-control" placeholder="From" value="{{object.getEducation.getPostgraduate.year_from|default('')}}" {{ readonly ? 'readonly ' : '' }}>  
                            </td>
                            <td class="tables">
                                <input type="text" id="postgraduate_year_to" name="postgraduate_year_to" class="form-control" placeholder="To" value="{{object.getEducation.getPostgraduate.year_to|default('')}}" {{ readonly ? 'readonly ' : '' }}>
                            </td>
                            <td class="tables">
                                <textarea id="postgraduate_awards_received" name="postgraduate_awards_received" class="form-control" rows="2" {{ readonly ? 'readonly ' : '' }}>{{object.getEducation.getPostgraduate.awards_received|default('')}}</textarea>
                            </td>
                    </tr>
                </tbody>
                <tfoot>
                </tfoot>
            </table>                                            
            <div class="form-actions fluid">
                <div class="col-md-12">
                    {% if not readonly %}
                    <button type="submit" class="btn blue">Submit</button>
                    {% endif %}
                    <a href="{{path(route_list)}}" class="btn default">Cancel</a>
                </div>
            </div>
    </div>
</form>   