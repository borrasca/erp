{% if object.getStatus == constant('\\Hris\\RecruitmentBundle\\Entity\\Application::STATUS_HIRED')%}
{% set readonly = true %}
{% endif %}
<form id="add_tech_skills_form" method="post" class="form-horizontal">
    <div class="form-group">
        {{form.hidden('app_form','tech_skill')}}
        {{ form.hidden('csrf_token',app.session.get('csrf_token')) }}
        <div class="form-group">
            <label class="col-md-3 control-label">Computer Skills</label>
            <div class="col-md-4">
                <input type="text" id="computer" name="computer" class="form-control" placeholder="Computer Skills" value="" {{ readonly ? 'readonly ' : '' }}>
            </div>
            {% if not readonly %}
            <a href="#" class="add_computer_button btn green">Add Computer Skill</a>
            {% endif %}
        </div>
        <div class="add_computer">

        {% for skills in object.getSkills %}
            {% for skill in skills.getComputer %}
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input type="text" id="computer[]" name="computer[]" class="form-control" placeholder="Computer Skills" value="{{skill}}" {{ readonly ? 'readonly ' : '' }}>
                        </div>
                    {% if not readonly %}
                    <button class="remove_computer_button btn red"><i class="fa fa-minus"></i></button>
                    {% endif %}
                </div>
            {% endfor %}
        {% endfor %}

        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Job-Related Skills</label>
            <div class="col-md-4">
                <input type="text" id="related" name="related" class="form-control" placeholder="Job-Related Skills" value="" {{ readonly ? 'readonly ' : '' }}>
            </div>
            {% if not readonly %}
                <button class="add_related_button btn green">Add Job-Related Skill</button>
            {% endif %}
        </div>
        <div class="add_related">
        {% for skills in object.getSkills %}
            {% for skill in skills.getRelated %}
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input type="text" id="related[]" name="related[]" class="form-control" placeholder="Job Related Skills" value="{{skill}}" {{ readonly ? 'readonly ' : '' }}>
                        </div>
                    {% if not readonly %}
                    <button class="remove_related_button btn red"><i class="fa fa-minus"></i></button>
                    {% endif %}
                </div>
            {% endfor %}
        {% endfor %}
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Hobbies and Special Interests
            </label>
            <div class="col-md-4">
                <input type="text" id="hobbies" name="hobbies" class="form-control" placeholder="Hobbies and Special Interests" value="" {{ readonly ? 'readonly ' : '' }}>
            </div>
                {% if not readonly %}
                <button class="add_hobbies_button btn green">Add Hobbies and Special Interest</button>
                {% endif %}
        </div>
        <div class="add_hobbies">
        {% for skills in object.getSkills %}
            {% for skill in skills.getHobbies %}
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input type="text" id="hobbies[]" name="hobbies[]" class="form-control" placeholder="Computer Skills" value="{{skill}}" {{ readonly ? 'readonly ' : '' }}>
                        </div>
                    {% if not readonly %}
                    <button class="remove_hobbies_button btn red"><i class="fa fa-minus"></i></button>
                    {% endif %}
                </div>
            {% endfor %}
        {% endfor %}
        </div>
        <div class="form-actions fluid">
            <div class="col-md-12">
            {% if not readonly %}
            <button type="submit" class="btn blue">Submit</button>
            {% endif %}
            <a href="{{ path(route_list) }}" class="btn default">Cancel</a>
            </div>
        </div>
    </div>
</form>