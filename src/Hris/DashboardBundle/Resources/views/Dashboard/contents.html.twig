<div class="row">
    {% if app.user.hasAccess('hris_dashboard.view') %}
    <!-- START CALENDAR -->
    <div class="col-md-6">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-madison calendar">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-calendar"></i>Calendar
                </div>
            </div>
            <div class="portlet-body light-grey">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div id="calendar" class="has-toolbar">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <!-- BEGIN DRAGGABLE EVENTS PORTLET-->
                        <h3><i class="fa fa-calendar-o"></i> Holidays</h3>
                        <div id="external-events">
                            <div id="holidays" class="form-group"></div>
                        </div>
                        <!-- END DRAGGABLE EVENTS PORTLET-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
    <!-- END CALENDAR -->
    {% endif %}
    {% if app.user.hasAccess('hris_dashboard_admin.view') %}
    <!-- START PIE CHART -->
    <div class="col-md-6">
        <div class="portlet solid bordered grey-cararra">
            <div class="portlet-body">
                <div id="chart" class="chart">
                </div>
                <div style="margin: 20px 0 10px 30px">
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-6 text-stat">
                            <span class="label label-sm label-info">
                            Contractual: </span>
                            <h3>{{ contractual_count }}</h3>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-6 text-stat">
                            <span class="label label-sm label-info">
                            Probationary: </span>
                            <h3>{{ probation_count }}</h3>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-6 text-stat">
                            <span class="label label-sm label-info">
                            Regular: </span>
                            <h3>{{ regular_count }}</h3>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-6 text-stat">
                            <span class="label label-sm label-danger">
                            Total: </span>
                            <h3>{{ employee_count }}</h3>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
    <!-- END PIE CHART -->
    {% endif %}
</div>
<div class="row">
    {% if app.user.hasAccess('hris_dashboard_admin.view') %}
        {{ dboard.statbox('Shortlisted Applicants', shortlisted_count, 'hris_dashboard_shortlisted_applicant', '', '', 'blue-madison', 'fa-file-text-o','icon-users') }}
        {{ dboard.statbox('Job Vacancy', vacancy_count, 'hris_dashboard_job_vacancy', '', '', 'purple-plum', 'icon-users', 'icon-magnifier') }}
    {% endif %}
    {% if app.user.hasAccess('hris_dashboard_admin.view') or app.user.hasAccess('hris_dashboard_request.view') %}
        {{ dboard.statbox('Pending Request', request_count, 'hris_dashboard_pending_request', '', '', 'red-intense', 'fa-file-text-o', 'fa-refresh') }}
    {% endif %}
    {# {{ dboard.statbox('Schedules', 0, 'hris_dashboard_schedules', '', '', 'green', 'fa-calendar', 'fa-male') }} #}
</div>